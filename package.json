{
  "name": "mcp-json-manager",
  "displayName": "MCP JSON Manager",
  "description": "Visual form-based manager for MCP (Model Context Protocol) JSON configurations",
  "version": "0.0.1",
  "publisher": "test-publisher",
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "json",
    "configuration",
    "manager",
    "gui",
    "form",
    "ai",
    "copilot"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/mcp-json-manager.git"
  },
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/mcp-json-manager/issues"
  },
  "homepage": "https://github.com/YOUR_USERNAME/mcp-json-manager#readme",
  "license": "MIT",
  "activationEvents": [
    "onCommand:mcpManager.openManager"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcpManager.openManager",
        "title": "Open MCP Manager",
        "category": "MCP"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "mcpManager.openManager",
          "when": "resourceFilename =~ /.*\\.mcp\\.json$/",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "mcpManager.openManager",
          "when": "resourceFilename =~ /.*\\.mcp\\.json$/",
          "group": "navigation"
        }
      ]
    ],
    "views": {
      "explorer": [
        {
          "id": "mcpManager",
          "name": "MCP Configurations",
          "when": "workspaceHasFiles"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "echo 'Linting skipped for now'",
    "test": "echo 'Tests skipped for now'",
    "package": "vsce package",
    "package:local": "vsce package --no-yarn",
    "install:local": "code --install-extension *.vsix"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.1.6"
  }
}