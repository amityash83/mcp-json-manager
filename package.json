{
  "name": "mcp-json-manager",
  "displayName": "MCP JSON Manager",
  "description": "Visual form-based manager for MCP (Model Context Protocol) JSON configurations",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mcpManager.openManager"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcpManager.openManager",
        "title": "Open MCP Manager",
        "category": "MCP"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "mcpManager.openManager",
          "when": "resourceFilename =~ /.*\\.mcp\\.json$/",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "mcpManager.openManager",
          "when": "resourceFilename =~ /.*\\.mcp\\.json$/",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "mcpManager",
          "name": "MCP Configurations",
          "when": "workspaceHasFiles"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcp-manager",
          "title": "MCP Manager",
          "icon": "$(json)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  }
}