{
  "name": "mcp-json-manager",
  "displayName": "MCP JSON Manager",
  "description": "Visual form-based manager for MCP (Model Context Protocol) JSON configurations",
  "version": "0.2.0",
  "publisher": "test-publisher",
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "json",
    "configuration",
    "manager",
    "gui",
    "form"
  ],
  "license": "MIT",
  "activationEvents": [
    "onCommand:mcpManager.openManager",
    "onView:mcpConfigurations",
    "onView:mcpWorkspaceConfigs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "MCP JSON Manager",
      "properties": {
        "mcpManager.panelLocation": {
          "type": "string",
          "default": "activitybar",
          "enum": [
            "activitybar",
            "panel"
          ],
          "enumDescriptions": [
            "Show in left sidebar (Activity Bar) - appears as a dedicated icon",
            "Show in bottom panel (with Terminal, Problems, etc.)"
          ],
          "markdownDescription": "Choose where to display the MCP Configuration panel. **Requires VS Code reload** to take effect.",
          "scope": "window"
        }
      }
    },
    "commands": [
      {
        "command": "mcpManager.openManager",
        "title": "Open MCP Manager",
        "category": "MCP",
        "icon": "$(json)"
      },
      {
        "command": "mcpManager.refreshConfigs",
        "title": "Refresh MCP Configurations",
        "category": "MCP",
        "icon": "$(refresh)"
      },
      {
        "command": "mcpManager.addServer",
        "title": "Add MCP Server",
        "category": "MCP",
        "icon": "$(add)"
      },
      {
        "command": "mcpManager.editServer",
        "title": "Edit Server",
        "category": "MCP",
        "icon": "$(edit)"
      },
      {
        "command": "mcpManager.switchPanelLocation",
        "title": "Switch Panel Location",
        "category": "MCP",
        "icon": "$(layout)"
      }
    ],
    "views": {
      "mcpActivityBar": [
        {
          "id": "mcpConfigurations",
          "name": "MCP Servers",
          "when": "config.mcpManager.panelLocation == 'activitybar'"
        },
        {
          "id": "mcpWorkspaceConfigs",
          "name": "Workspace Configs",
          "when": "config.mcpManager.panelLocation == 'activitybar'"
        }
      ],
      "mcpBottomPanel": [
        {
          "id": "mcpConfigurations",
          "name": "MCP Servers",
          "when": "config.mcpManager.panelLocation == 'panel'"
        },
        {
          "id": "mcpWorkspaceConfigs",
          "name": "Workspace Configs",
          "when": "config.mcpManager.panelLocation == 'panel'"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcpActivityBar",
          "title": "MCP Configuration",
          "icon": "$(json)",
          "when": "config.mcpManager.panelLocation == 'activitybar'"
        }
      ],
      "panel": [
        {
          "id": "mcpBottomPanel",
          "title": "MCP Configuration",
          "icon": "$(json)",
          "when": "config.mcpManager.panelLocation == 'panel'"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "mcpManager.refreshConfigs",
          "when": "view == mcpConfigurations",
          "group": "navigation"
        },
        {
          "command": "mcpManager.addServer",
          "when": "view == mcpConfigurations",
          "group": "navigation"
        },
        {
          "command": "mcpManager.switchPanelLocation",
          "when": "view == mcpConfigurations",
          "group": "navigation@99"
        }
      ],
      "view/item/context": [
        {
          "command": "mcpManager.editServer",
          "when": "view == mcpConfigurations",
          "group": "inline"
        }
      ],
      "explorer/context": [
        {
          "command": "mcpManager.openManager",
          "when": "resourceFilename =~ /.*\\.mcp\\.json$/",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "mcpManager.switchPanelLocation",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "echo 'Tests skipped'"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.1.6"
  }
}
