{
  "name": "mcp-json-manager",
  "displayName": "MCP JSON Manager",
  "description": "Visual form-based manager for MCP (Model Context Protocol) JSON configurations",
  "version": "0.0.2",
  "publisher": "test-publisher",
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "json",
    "configuration",
    "manager",
    "gui",
    "form"
  ],
  "license": "MIT",
  "activationEvents": [
    "onCommand:mcpManager.openManager",
    "onView:mcpConfigPanel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcpManager.openManager",
        "title": "Open MCP Manager",
        "category": "MCP",
        "icon": "$(json)"
      },
      {
        "command": "mcpManager.refreshConfigs",
        "title": "Refresh MCP Configurations",
        "category": "MCP",
        "icon": "$(refresh)"
      },
      {
        "command": "mcpManager.addServer",
        "title": "Add MCP Server",
        "category": "MCP",
        "icon": "$(add)"
      },
      {
        "command": "mcpManager.editServer",
        "title": "Edit Server",
        "category": "MCP",
        "icon": "$(edit)"
      }
    ],
    "views": {
      "mcpConfigPanel": [
        {
          "id": "mcpConfigurations",
          "name": "MCP Servers",
          "when": "true"
        },
        {
          "id": "mcpWorkspaceConfigs",
          "name": "Workspace Configs",
          "when": "workspaceHasFiles"
        }
      ]
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "mcpConfigPanel",
          "title": "MCP Configuration",
          "icon": "$(json)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "mcpManager.refreshConfigs",
          "when": "view == mcpConfigurations",
          "group": "navigation"
        },
        {
          "command": "mcpManager.addServer",
          "when": "view == mcpConfigurations",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "mcpManager.editServer",
          "when": "view == mcpConfigurations",
          "group": "inline"
        }
      ],
      "explorer/context": [
        {
          "command": "mcpManager.openManager",
          "when": "resourceFilename =~ /.*\\.mcp\\.json$/",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "echo 'Tests skipped'"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.1.6"
  }
}
