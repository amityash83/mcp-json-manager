{
  "name": "mcp-json-manager",
  "displayName": "MCP JSON Manager",
  "description": "Visual form-based manager for MCP (Model Context Protocol) JSON configurations",
  "version": "0.0.1",
  "publisher": "test-publisher",
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=18.0.0"
  },
  "categories": ["Other"],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "json",
    "configuration",
    "manager",
    "gui",
    "form"
  ],
  "license": "MIT",
  "activationEvents": ["onCommand:mcpManager.openManager"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcpManager.openManager",
        "title": "Open MCP Manager",
        "category": "MCP"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "mcpManager.openManager",
          "when": "resourceFilename =~ /.*\\.mcp\\.json$/",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "echo 'Tests skipped'"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.1.6"
  }
}